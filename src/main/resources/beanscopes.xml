<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="singletonBean" class="com.sandy.spring.di.beanscopes.SingletonBean" scope="singleton" />
    <bean id="prototypeBean" class="com.sandy.spring.di.beanscopes.PrototypeBean" scope="prototype" />

    <!-- Custom scopes -->
    <bean id="customScope" class="com.sandy.spring.di.beanscopes.CustomScopeBean" scope="custom" />

</beans>